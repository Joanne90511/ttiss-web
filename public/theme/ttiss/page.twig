{% extends 'partials/_master.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>{{ record.title }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {% if record.image!="" %}
                    <a href="{{ image(record.image) }}">
                        <img src="{{ thumbnail(record.image, 740, 560) }}">
                    </a>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ record.body }}
            </div>
        </div>

    </div>

{% endblock main %}
